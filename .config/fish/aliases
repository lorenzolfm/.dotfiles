alias v="nvim"
alias c="clear"

# Git

alias ga="git add"
alias gua="git restore --staged"

alias gcm="git commit --message"
alias gca="git commit --amend --no-edit"

alias gundo="git checkout --"

alias Gs="git status"
alias gss="git status --short"

alias gl="git log"
alias gls="git log --stat"
alias glo="git log --pretty=oneline"
alias glG="git log --oneline --decorate --graph --all"

alias gb="git branch"
alias gcout="git checkout"
alias gcb="git checkout -b"
alias gbdelete="git branch -d"
alias gbdeleteFORCE="git branch -D"

# Cargo
function crun
    cargo run $argv
    ~/.local/bin/cargo-notify $status "run"
end

function ccheck
    cargo check $argv
    ~/.local/bin/cargo-notify $status "check"
end

function ccheckall
    cargo check --workspace --all-targets $argv
    ~/.local/bin/cargo-notify $status "check-all"
end

function cbuild
    cargo build $argv
    ~/.local/bin/cargo-notify $status "build"
end

function ctest
    cargo test $argv
    ~/.local/bin/cargo-notify $status "test"
end

function cibipa
    cargo fmt && \
        ./scripts/check-allows.sh && \
        ./scripts/clippy.sh && \
        ./scripts/test.sh
    ~/.local/bin/cargo-notify $status "ci"
end

# NixOS
alias rebuild='sudo nixos-rebuild switch'
alias collect='sudo nix-collect-garbage -d'

